{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-native",
    "lib": ["es2017"],
    "moduleResolution": "node",
    "types": ["node"],
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "baseUrl": "./Src",
    "paths": {
      "@Assets/*": ["Assets/*"],
      "@Controls/*": ["Controls/*"],
      "@Extensions/*": ["Extensions/*"],
      "@Helpers/*": ["Helpers/*"],
      "@Pages/*": ["Pages/*"],
      "@Services/*": ["Services/*"],
      "@Theme/*": ["Theme/*"],
      "@Translations/*": ["Translations/*"],
    }
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}